<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_restau_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fang_normal_pressed"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/rank_restau_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/rank_restau_item_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="matrix"
        android:src="@drawable/shape_point" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rank_restau_item_point"
        android:layout_toRightOf="@+id/rank_restau_number" >

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rank_restau_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="5dp"
                android:textColor="#FFE06224"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rank_restau_item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:textColor="#FFE06224"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/rank_restau_item_honor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/rank_restau_item_score"
                android:contentDescription="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top" >

            <TextView
                android:id="@+id/rank_restau_item_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>